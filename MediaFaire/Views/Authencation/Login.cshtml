@model MediaFaire.Models.Login
@inject IViewLocalizer Loc;
@{
    ViewData["Title"] = "Login";
}






<h1 class="text-center">@Loc["Login"]</h1>




<div class="mu-contact-content">
    <div class="row">

        <div class="col-md-12">
            <div class="mu-contact-form-area">
                <form class="mu-contact-form" asp-action="Login" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group">
                        <span class="fa fa-envelope mu-contact-icon"></span>
                        <input asp-for="Email" type="email" class="form-control" placeholder="@Loc["Email"]" id="email" required>
                        <span asp-validation-for="Email"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Password" type="password" class="form-control" placeholder="@Loc["Password"]" id="subject" required>
                        <span asp-validation-for="Password"></span>
                    </div>
                    <button type="submit" class="mu-send-msg-btn"><span>@Loc["Login"]</span></button>
                </form>
            </div>
        </div>

    </div>
</div>
















@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
