@model IEnumerable<MediaFaire.Models.UploadsViewModel>
@inject IViewLocalizer Loc;

@{
    ViewData["Title"] = "Home Page";
}
<h1 class="text-center" style="margin-top:20px">@Loc["Search"]</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-8">
            <form asp-controller="Uploads" asp-action="SearchUploads">
                <div class="input-group input-group-lg">
                    <input name="searchText" type="text" class="form-control" placeholder="Search For Files" aria-label="Recipient's username" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2" asp-controller="Uploads" asp-action="SearchUploads">@Loc["Button.Search"]</button>
                </div>
            </form>
        </div>

    </div>

    <div class="col-12 text-center" style="margin-top:50px">
        <h1>@Loc["Popular"]</h1>
        <hr />
        <table class="table">

            
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @if (item.ContentType.Contains("imag"))
                        {

                            <img src="~/Uploads/@item.FileName" class="upload" alt="...">
                        }
                    </td>

                    <td>@item.FileName</td>
                    <td>@Loc["Downloads"]: @item.UploadCount</td>
                </tr>

                }
            </tbody>
        </table>


    </div>
</div>